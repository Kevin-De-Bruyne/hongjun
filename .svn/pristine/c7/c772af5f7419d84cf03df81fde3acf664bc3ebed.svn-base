/**index.wxss**/
.containeshar{
	display: flex;
	width: 100%;
	font-size: 14px;
	padding: 0;
	background: #fff;
	align-items: center;
	justify-content: center;
	height: auto;
}
.main{
	width:94%;
}
.main-top{
	display: flex;
	margin: 8px 0;
	justify-content: center;
	align-items: center;
}
.main-top-left{
	display: flex;
	align-items: center;
	flex: 1;
	background: #eee;
	border-radius: 10px;
	padding: 3px 7px;
}
.main-top-left input{
	flex: 1;
	margin: 0 7px;
	font-size: 12px;
	height: 27px;
}
.main-top-right{
	width: 40px;
	text-align:center;
}


.scroll-x{
	width:100%;
	height:36px;
	line-height:36px;
	white-space: nowrap;
}
.scroll-x view{
	width:20%;
	text-align:center;
	display: inline-block; 
}
::-webkit-scrollbar {
	width: 0;
	height: 0;
	color: transparent;
}
.swiper{
	width:100%;
}
.slide-image{
	width:100%;
	height:150px;
}
.ifllclass{
	display: flex;
	flex-wrap: wrap;
	background: #fff;
	font-size: 22rpx;
	color: #555;
	align-items: center;
	justify-content: center;
}
.list{
	width: 20%;
	text-align: center;
	padding: 17px 0;
}
.list image{
	width: 39px;
	height: 39px;
	border-radius: 50%;
	margin: 0 auto 3px auto;
}


/**/

.linehot{
	background: #fff;
	color: #000;
	padding: 7px 0;
	margin: 12px 0 2px 0;
	display: flex;
	align-items: center;
	font-size: 13px;
}
.line1{
	flex: 1;
	padding: 0 7px;
	font-weight: bold;
}
.linemore{
	padding: 0 7px;
	font-size: 22rpx;
}
/**/

.shops{
	display: flex;
	flex-wrap: wrap;
	width: 100%;
	background:#fbfbfb;
	font-size:12px;
	padding-top: 7px;
}
.shop_lists{
	flex: 1;
	background: #fff;
	margin-left: 6px;
	margin-bottom: 10px;
}
.list_imgs{
	width: 100%;
	height: 100px;
}
.list_titles{
	padding: 0 3px;
	text-overflow: -o-ellipsis-lastline;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	line-clamp: 2;
	-webkit-box-orient: vertical;
	height: 32px;
	margin-bottom: 3px;
}
.list_moneys{
	width: 100%;
	margin-bottom: 7px;
	display: flex;
	align-items: center;
	color: #f44;
}


.shop-list{
	width:47%;
	margin-left:2%;
	background:#fff;
	margin-bottom:10px;
}
.list-img{
	width: 100%;
	height: 175px;
	padding: 12px 0 5px 0;
}
.list-title{
	width:100%;
	text-indent: 10px;
}
.list-money{
	width:100%;
	margin-bottom:18px;
}
.money-left{
	width:100%;
	color:#f44;
  display:block;
}
.money-right{
	width:100%;
	color:#aaa;
	/* text-decoration:line-through; */
	font-size:12px;
  display:block;
}
.bottom-text{
	width:100%;
	margin-top:12px;
	background:#fff;
}
.bottom-text text{
	width:100%;
	text-align:center;
}

/**/
.posin{
	position: fixed;
	bottom: 7px;
	right: 7px;
	width: 33px;
	height: 100px;
	overflow: hidden;
}
.service{
	background-color: #ededed;
	width: 30px;
	height: 30px;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	margin: 12px auto;
}
.handle{
	line-height: unset;
}
button::after{
	border: none;
}