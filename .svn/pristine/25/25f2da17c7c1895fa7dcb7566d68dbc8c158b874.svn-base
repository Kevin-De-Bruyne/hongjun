/* pages/recommend/recommend.wxss */

.poste_box{
	width: 95%;
	background-color: #fff;
	box-shadow: 0px 0px  10px 5px #D8D7DD;
	height: 98%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	justify-content:center; 
	align-items: center;
	background-repeat: no-repeat;
	background-size: contain;
	background-position-x: center;
	margin: 1% 2.5%;
}
.codeurl{
	width: 100%;
	height: 100%;
}
.save{
	position: fixed;
	bottom: 100rpx;
	left: 0;
	width: 100%;
	height: 44px;
	display: flex;
	align-items: center;
	justify-content: center;
}
.saves{
	width: 100px;
	height: 44px;
	background: #8bc34a;
	color: white;
	text-align: center;
	line-height: 46px;
	border-radius: 3px;
	font-size: 14px;
}