/* pages/playerDetail/playerDetail.wxss */
.detail{
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 100%;
  height: 100%;
  background-image: linear-gradient(to bottom,black, rgb(115,41,40));
}
.player{
  padding: 0 10%;
}
.info{
  margin-top: 170rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.info_icon{
  width: 275rpx;
  height: 275rpx;
  border-radius: 15rpx;
  /* background-color:red; */
}
.info_icon image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.info_name{
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: white;
}
.toupiao_total{
  margin-top: 50rpx;
  width: 100%;
  height:90rpx;
  border: 1px solid rgba(237,235,208,0.6);
  /* border-top-style: none; */
  position: relative;
}
.toupiao_whole{
  background-color:rgb(49,17,17);
  width: 100%;
  height: 90rpx;
}
.total_lan{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  top: -20rpx;
}
.total_lan_list1{
  /* margin-left: 10rpx; */
  width: 25%;
  text-align: center;
  padding-left: 10rpx;
  /* padding-right: 10rpx; */
  color: white;
  border-right:none;
  font-size: 26rpx;
  background-color:rgb(49,17,17);
}
.total_lan_list{
  width: 25%;
  /* margin-left: 10rpx; */
  text-align: center;
  color: white;
  border-right: 1px solid rgba(237,235,208,0.6);
  font-size: 26rpx;
  background-color:rgb(49,17,17);
}
.total_num{
  width: 100%;
display: flex;
justify-content: space-around;
/* margin-top: 40rpx; */
position: absolute;
bottom: 20rpx;
}
.total_num_list{
  /* width: 25%; */
  text-align: center;
  color: rgba(237,235,208,0.6);
  font-size: 22rpx;
}
.playerPic{
  width: 100%;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.picList{
  width: 50%;
  height: 180rpx;
}
.picList image{
  width: 100%;
  height: 100%;
}
.introduce{
  width: 100%;
  height: 180rpx;
  margin-top: 20rpx;
  border-radius: 15rpx;
  border: 1px solid rgba(237,235,208,0.6);
  display: flex;
  line-height: 180rpx;
  justify-content: center;
  color: rgba(255,255,255,0.8);
  font-size: 28rpx;
}
.bottom{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
}
.bottomList{
  width: 100%;
  height: 50rpx;
  background-color: rgb(255,252,199);
  text-align: center;
  margin-top: 15rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-radius: 30rpx;
  font-weight: bold;
}
.icon{
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}
.success{
  margin-top: 30rpx;
  text-align: center;
  font-size: 50rpx;
  color: rgb(255,252,199);
}
.again{
  width: 100%;
  height: 70rpx;
  text-align: center;
  color: black;
  font-weight: bold;
  margin-top: 80rpx;
  font-size: 40rpx;
  background-color: rgb(255,252,199);
  border-radius: 15rpx;
  line-height: 70rpx;
}
