/* pages/toupiao/toupiao.wxss */
.toupiao{
  width: 100%;
  margin: 0;
  /* height: 180%; */
  padding: 0;
  overflow: hidden;
  background-position: center 0;
  background-size: 100%;  
  /* background-color:rgb(115,41,40); */
  
}
.toupiao_t{
  width: 100%;
  height: 425rpx;
  margin-top: 110rpx;
  position: relative;
}
/* .toupiao_t image{
  width: 100%;
  height: 100%;
} */
.vedio{
  width: 80%;
  margin:25rpx 10% 0  10%;
  height: 300rpx;
   /* background-color: blue; */
}
.vedio video{
  width: 100%;
  height: 100%;
  object-fit: fill;
}
.level{
  margin: 40rpx 10% 30rpx 10%;
  width: 80%;
  padding-bottom: 100rpx;
}
.level_search{
  width: 100%;
  border-radius: 40rpx;
  height: 60rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}
.level_search input{
  width: 82%;
  height: 60rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
}
.level_search .search{
  width: 18%;
  height: 60rpx;
  background-color:black;
  border-top-right-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  color:rgb(255,215,0);
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}
.province{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  margin-top: 20rpx;
}
.province_list{
  height: 45rpx;
  padding: 0 30rpx 0 30rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  margin: 0 1% 0 2%;
  line-height: 45rpx;
  margin-top: 20rpx;
  /* background-color: #fff; */
  border: 1px solid rgb(255,255,255,0.7);
  color:white;
}
.toupiao_c{
  background-color:rgb(115,41,40);
}
.province_active{
  background-color: #fff;
  color: black;
}
.province_whole{
  padding: 0 15rpx 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.yanyuanwhole{
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
}
.yanyuanList{
  width: 100%;
  border-radius: 15rpx;
  border: 1px solid rgb(255,255,255,0.7);
  /* background-color: white; */
  margin-top: 30rpx;
  height: 200rpx;
  display: flex;
  /* align-items: center; */
  justify-content:space-between
}
.yy_left{
 display: flex;
 align-items: center;
 justify-content: center;
}
.yanyuanList .icon{
  width: 130rpx;
  height: 130rpx;
  margin-left: 30rpx;
  display: flex;
  align-items: center;
  /* background-color: red; */
}
.yanyuanList .icon image{
  max-width: 130rpx;
  max-height: 90rpx;
   min-width: 130rpx;
  min-height: 90rpx;
  /* background-color: red; */
}
.yy_right{
  width: 70%;
  height: 130rpx;
  /* background-color: yellow; */
}
.yy_right_top{
  width: 94%;
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
  font-size: 26rpx;
  margin-top: 20rpx;
}
.yy_right_bottom{
  width: 94%;
  height: 50%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
  font-size: 26rpx;
  margin-top: 30rpx;
}
.vote{
  width: 120rpx;
  height: 50rpx;
  border-radius: 15rpx;
  line-height: 50rpx;
  border: 1px solid white;
  text-align: center;
  color: white;
}
.more{
  margin-top: 30rpx;
  font-size: 24rpx;
  text-align: center;
  color: white;
}
.toupiao_total{
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* background-color: rgb(115,41,40); */
  background-image: linear-gradient(to bottom,black, rgb(115,41,40));
}
.toupiao_total_c{
  width: 80%;
  height: 150rpx;
  border: 1px solid rgb(154,131,52);
  display: flex;
  flex-direction: column;
}
.toupiao_total_c_t{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 28rpx;
  padding-top: 20rpx;
  color: #fff;
}
.toupiao_total_c_b{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 24rpx;
  color: rgb(254,253,202);
  padding-top: 30rpx;
}
.timeout{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.timeout_t{
  width: 100%;
  font-size: 32rpx;
  color:rgba(255,254,201,0.8);
  text-align: center;
}
.timeout_b{
  width: 100%;
  margin-top: 15rpx;
  display: flex;
  justify-content: center;
}
.timeout_whole{
  width: 200rpx;
  display: flex;
  flex-direction: row;
}
.timeout_b_l{
  border-radius: 10rpx;
  width: 95rpx;
  height: 95rpx;
  border: 1px solid rgba(255,254,201,0.8);
  font-size: 65rpx;
  color:rgb(255,254,201);
  text-align: center;
  line-height: 95rpx;
  font-weight: bold;
}
.timeout_b_r{
  border-radius: 10rpx;
  /* width: 95rpx;
  height: 95rpx; */
  font-size: 68rpx;
  color:rgb(255,254,201);
  text-align: center;
  line-height: 95rpx;
  font-weight: bold;
  margin-left: 25rpx;
}
.scroll{
  position: fixed;
  right: 10rpx;
  top:50vh;
  display: flex;
  flex-direction: column;
}
