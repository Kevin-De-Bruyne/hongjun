/* pages/playerDetail/playerDetail.wxss */
.detail{
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 100%;
  /* height: 100%; */
  min-height: 100vh;
  background-image: linear-gradient(to bottom,black, rgb(115,41,40));
}
.player{
  padding: 0 10%;
  height: 37%;
}
.info{
  margin-top: 130rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.info_icon{
  width: 275rpx;
  height: 275rpx;
  border-radius: 15rpx;
  /* background-color:red; */
}
.info_icon image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.info_name{
  margin-top: 20rpx;
  font-size: 35rpx;
  font-weight: bold;
  color: white;
}
.toupiao_total{
  margin-top: 50rpx;
  width: 100%;
  height:90rpx;
  border: 1px solid rgba(237,235,208,0.6);
  /* border-top-style: none; */
  position: relative;
}
.toupiao_whole{
  background-color:rgb(49,17,17);
  width: 100%;
  height: 90rpx;
}
.total_lan{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  position: absolute;
  top: -20rpx;
}
.total_lan_list1{
  /* margin-left: 10rpx; */
  width: 25%;
  text-align: center;
  padding-left: 10rpx;
  /* padding-right: 10rpx; */
  color: white;
  border-right:none;
  font-size: 26rpx;
  background-color:rgb(49,17,17);
}
.total_lan_list{
  width: 25%;
  /* margin-left: 10rpx; */
  text-align: center;
  color: white;
  border-right: 1px solid rgba(237,235,208,0.6);
  font-size: 26rpx;
  background-color:rgb(49,17,17);
}
.total_num{
  width: 100%;
display: flex;
justify-content: space-around;
/* margin-top: 40rpx; */
position: absolute;
bottom: 20rpx;
}
.total_num_list{
  /* width: 25%; */
  text-align: center;
  color: rgba(237,235,208,0.6);
  font-size: 22rpx;
}
.bottom{
  margin-top: 10%;
  padding: 25rpx 5% 0 5%;
  background-color: white;
  padding-bottom: 200rpx;
  height: 45vh;
  position: relative;
}
.presentWhole{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;

}
.presentList{
  /* width: 160rpx; */
  /* height: 160rpx; */
  /* background-color:red; */
  border-radius: 50%;
  margin: 30rpx 30rpx;
  display: flex;
  flex-direction: column;
}
.list_t{
  width: 140rpx;
  height: 140rpx;
  /* background-color:red; */
  border-radius: 50%;
  margin:  0 0 10rpx 0;
  position: relative;
}
.present_checked{
  width: 50rpx;
  height: 50rpx;
  background-color: blanchedalmond;
  border-radius: 50%;

}
.list_t image{
  width: 100%;
  height: 100%;
}
.list_t .icon-gou{
  position: absolute;
  top:40%;
  left: 30%;
  color: blue;
  font-size: 45rpx;
}
.list_c{
  margin-top: 15rpx;
  font-size: 24rpx;
  text-align: center;
}
.list_b{
  font-size: 23rpx;
  text-align: center;
  padding-top: 15rpx;
}
.payAndagree{
  width: 100%;
  display: flex;
  /* justify-content: space-between; */
  flex-direction: row;
position: absolute;
/* bottom: rpx; */
margin-top: 30rpx;

align-items: center;
height: 90rpx;
}
.agree{
  width: 70%;
  height: 55rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.pay{
  width: 180rpx;
  height: 60rpx;
  border-radius: 15rpx;
  background-color:rgb(166,41,39);
  font-size: 28rpx;
  color: white;
  text-align: center;
  line-height: 60rpx;
}
checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
}