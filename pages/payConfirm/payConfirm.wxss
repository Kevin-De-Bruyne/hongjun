/* pages/payConfirm/payConfirm.wxss */
.payConfirm{
  overflow: hidden;
  margin: 0;
  padding: 0;
  width: 100%;
  min-height: 100vh;
  background-image: linear-gradient(to bottom,black, rgb(115,41,40));
}
.goods_whole{
  margin: 140rpx 10% 0 10%;
  /* border: 1px solid rgba(237,235,208,0.6); */
}
.goods_name{
  margin-top: 30rpx;
  width: 100%;
  text-align: center;
  color: rgba(237,235,208);
  font-size: 28rpx;
  font-weight: bold;
}
.original_img{
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  justify-content: center;
}
.original_img image{
  width: 280rpx;
  height: 280rpx;
  /* background-color: red; */
  border-radius: 30rpx;
}
.shop_price{
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-start;
}
.price_l{
  font-size: 28rpx;
  color: rgba(237,235,208);
}
.price_r{
  font-size: 28rpx;
  color: rgba(237,235,208);
  margin-left: 30rpx;
}
.goods_sn{
  margin-top: 60rpx;
  display: flex;
  justify-content: flex-start;
}
.sn_l{
  font-size: 28rpx;
  color: rgba(237,235,208);
}
.sn_r{
  font-size: 28rpx;
  color: rgba(237,235,208);
  margin-left: 30rpx;
}
.goods_remark{
  margin-top: 40rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
}
.goods_remark_t{
  display: flex;
  justify-content: flex-start;
  color: rgba(237,235,208);
  font-size: 28rpx;
}
.goods_remark_b{
  display: flex;
  width: 100%;
  height: 200rpx;
  border-radius: 40rpx;
  border: 1px solid rgba(237,235,208,0.6);
  margin-top: 25rpx;
} 
.remark{
  flex-wrap: wrap;
  margin: 30rpx 30rpx;
  color: rgba(237,235,208);
  font-size: 24rpx;
}
.btn{
  margin-top: 50rpx;
  width: 100%;
  height: 100rpx;
  background-color: rgb(255,252,199);
  color: white;
  line-height: 100rpx;
  text-align: center;
  border-radius: 70rpx;
  color: black;
  font-size: 34rpx;
  font-weight: bold;
}
