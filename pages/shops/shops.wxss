/* xxx */

/* 列表 */
.list{
position: relative;
height: 185rpx;
border-bottom: 1rpx solid #e9e9e9;
}
.list:last-child{
border-bottom:none;
}
/* 编辑 */
.edit{
position: relative;
width: 100%;
height: 80rpx;
line-height: 80rpx;
/* background-color: #f6f6f6; */
}
/* 删除 */
.dele_edit{
position: absolute;
width: 40rpx;
height: 40rpx;
right: 30rpx;
bottom: 25rpx;
}
/* 编辑标题 */
.edit_btn{
position: absolute;
font-size: 26rpx;
color: #888;
right: 30rpx;
}
/* 单选状态 */
.radio_chek{
position: absolute;
left: 30rpx;
top: 70rpx;
width: 40rpx;
height: 40rpx;
}
/* 列表商品图片 */
.list_img{
position: absolute;
top: 20rpx;
left: 100rpx;
width: 144rpx;
height: 144rpx;
}
/* 列表规格 */
.cart_g_name{
position: absolute;
left: 280rpx;
font-size: 26rpx;
color: #aaa;
top: 75rpx;
}
/* 列表商品名称 */
.list_name{
position: absolute;
left: 280rpx;
top: 30rpx;
width: 300rpx;
/* background-color: red; */
font-size: 26rpx;
overflow: hidden;    
text-overflow:ellipsis;    
white-space: nowrap;
}
/* 列表商品价格 */
.list_price{
position: absolute;
font-size: 32rpx;
color:  #E05828;
font-weight: bold;
left: 280rpx;
bottom: 20rpx;
}

/* 列表商品删除 */
.list_del{
position: absolute;
right: 220rpx;
bottom: 20rpx;
width: 40rpx;
height: 40rpx;
line-height: 40rpx;
text-align: center;
font-size: 44rpx;
}
/* 固定底部 */
.cont_bot{
position: fixed;
bottom:0rpx;
width: 100%;
height: 104rpx;
background: #fff;
border-top: 2rpx solid #ebebeb;
}
/* 全选ICON */
.total-select{
width:40rpx;
height:40rpx;
margin:35rpx auto;
margin-left:16rpx;
margin-right:12rpx;
float:left;
}
.all{
float:left;
width:18%;
line-height:104rpx;
}
/* 全选标题 */
.sel_count_name{
font-size: 30rpx;
color: #333;
}

/* 合计金额 */
.count_price{
font-size:12px;
color: #aaa;
height:100%;
padding: 0 7px;
float: right;
display: -webkit-box;
display: -webkit-flex;
display: -ms-flexbox;
display: flex;
justify-content:center;
align-items:Center;
}
.count_price text{
font-size:12px;
}
/* 购物车为空 */
.list_none{
padding:40rpx 0;
color: #999;
text-align: center;
}
/* 提交 */
.submit{
float:right;
width: 212rpx;
height: 104rpx;
line-height: 104rpx;
right: 0rpx;
font-size: 30rpx;
text-align: center;
color:#fff;
background-color:#E05828;
}
.navigator-hover{
background: none;
}





/*数量加减*/
.carts-num{
position: absolute;
right: 30rpx;
bottom: 23rpx;
/* background-color: red; */
display: flex;
align-items: center;
text-align: center;
height: 50rpx;
}
.view_text_center{
border: 1rpx solid #ebebeb;
font-size: 24rpx;  
display: inline-block;
color: #333;
height: 45rpx;
display: flex;
justify-content: center;
align-items: center;
width: 76rpx;
}
.carts-num .minus, .carts-num .plus{
margin: 10rpx;
border: 1rpx solid #ebebeb;
color: #000;
display: flex;
justify-content: center;
align-items: center;
height: 45rpx;
width: 40rpx;
border-radius: 2px;
}
.carts-num .minus{
font-size: 34rpx;
}
/* .carts-num .minus.disabled{color: red;} */
.carts-num .plus{
font-size: 34rpx;
}


/* 热卖商品 */

.shops{
    display: flex;
    flex-wrap: wrap;
    width:100%;
    background:#fbfbfb;
    font-size:12px;
}
.shop_lists{
    flex: 1;
    background: #fff;
    margin-left: 6px;
    margin-bottom: 10px;
}
.list_imgs{
    width: 100%;
    height: 100px;
}
.list_titles{
    padding: 0 3px;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 32px;
}
.list_moneys{
    width: 100%;
    margin-bottom: 18px;
    display: flex;
    align-items: center;
    color: #f44;
}


.shop-list{
    width:47%;
    margin-left:2%;
    background:#fff;
    margin-bottom:10px;
}
.list-img{

    width:100%;
    height:175px;
    padding:12px 0;
}
.list-title{
    width:100%;
    text-indent: 10px;
}
.list-money{
    width:100%;
    margin-bottom:18px;
}
.money-left{
    width:50%;
    color:#f44;
}
.money-right{
    width:50%;
    color:#aaa;
    text-decoration:line-through;
    font-size:12px;
}
.bottom-text{
    width:100%;
    margin-top:12px;
    background:#fff;
}
.bottom-text text{
    width:100%;
    text-align:center;
}