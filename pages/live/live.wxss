/* pages/live/live.wxss */
.live{
  /* height: 100%; */
  margin: 0;
  padding: 0;
  background-color: #eeeeee;
  overflow: hidden;
}
/* 顶部开始 */
.top{
  width: 94%;
  padding: 0 3%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* position: fixed;
  top: ; */
  padding-top: 20px;
}

.top .left{
  width: 18%;
  height: 50px;
  font-size: 14px;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* float: left; */
}
.left_icon{
  width: 25px;
  height: 25px;
}
.left_icon image{
  width: 100%;
  height: 100%;
}
.top .right{
  width: 50%;
  border-radius: 30px;
  height: 35px;
  display: flex;
  align-items: center;
  /* justify-content: space-around; */
  background-color:rgb(239,239,239);
  margin-left: 20px;

}
.top .right .icon{
  padding: 0 10px;
  width: 25px;
  height:25px;
}
.top .right .icon image{
  width: 100%;
  height: 100%;
}
.top .right input{
  /* padding-left: 15px; */
  font-size: 14px;
}
/* 顶部结束 */
/* 轮播图开始 */
.center{
  width: 100%;
  /* background-color: #fff; */
}
.myswiper{
  width: 96%;
  /* background-color: rgb(242,203,37); */
  border-radius: 13px;
  height: 270rpx;
  padding: 5px 2%;
  margin-top: 120rpx;
}
swiper{
  width: 100%;
  height: 100%;
}
swiper-item image{
  width: 100%;
  height: 100%;
  border-radius: 13px;
}
/* 轮播图结束 */
/* 新人榜开始 */
.person{
  width: 94%;
  background-color: #fff;
  padding: 5px 3% 0 3%;
}
.person .tops{
  display: flex;
  justify-content: space-between;
  height: 30px;
}
.person .tops .new{
  font-size: 15px;
  color: black;
  font-weight:bold;
}
.person .tops .more{
  font-size: 12px;
  color: rgb(148,148,148);
}
.bottom .ul{
  padding: 10px 3%;
  /* height: 30px; */
  display: flex;
  background-color: #fff;
}
.bottom .ul .li{
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.li_icon{
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-left: 3px;
  /* background-color: red; */
  border: 2px solid rgb(236,236,236);
}
.li_icon image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.li_txt{
  margin-top: 10px;
  width: 42px;
  height: 15px;
  background-color: rgb(250,203,87);
  text-align: center;
  line-height: 15px;
  font-size: 7px;
  color: white;
  border-radius: 15px;
}
/* 新人榜结束 */
/* 推荐 */
.recommend{
  margin-top: 20px;
  padding: 0;
  display: flex;
  /* width: 300px; */
  justify-content: space-between;
  /* flex-direction: row; */
  overflow:scroll;
  white-space: nowrap;
}
.recommend::-webkit-scrollbar {display:none}
.rli{
  padding:0 2% 0 2% ;
  color: rgb(148,148,148);
  height: 30px;
  /* width: 60px; */
  margin-left: 5px;
  font-weight: bold;
  background-color: #fff;
  font-size: 14px;
  /* display: flex;
  justify-content: center;
  flex-direction: column; */
}
 .active{
   /* width: 20px;
  height: 2px;
  margin-left: 3px;
   margin-top: 10px; */
  color: rgb(237,95,86);
  border-bottom: 2px solid rgb(237,95,86);
}
/* 推荐结束 */
/* 商品信息开始 */
.whole{
  padding: 8px 1%;
  display: flex;
  flex-wrap: wrap;
}
.list{
  width: 47%;
  display: flex;
  flex-direction: column;
  margin-left: 2%;
  margin-bottom: 10px;
  /* border-radius: 10px; */
  position: relative;
}
.list .liveicon{
  height: 390rpx;
}
.list .liveicon image{
  height: 100%;
  width: 100%;
  border-top-right-radius: 5px;
  border-top-left-radius: 5px;
}
.list .bottom{
  height: 80rpx;
  width: 100%;
  background-color: rgb(255,255,255);
  font-size: 14px;
  border-bottom-right-radius: 5px;
  border-bottom-left-radius: 5px;
}
.list .bottom text{
  padding-left: 10px;
}
/* 头部固定 */
.topnav{
  position: fixed;
  top: 0rpx;
  left: 0;
  z-index:99;
  background: #fff;
  /* padding: 3%; */
  width: 94%;
  /* z-index:999; */
}
.list .watch{
  width: 55%;
  position: absolute;
  top: 3px;
  height: 25px;
  right: 4px;
}
.watchleft {
  width: 40%;
  background-color: rgb(81,167,252);
  height: 50rpx;
  float: left;
  border-top-left-radius:15px ;
  border-bottom-left-radius:15px ;
  display: flex;
  align-items: center;
}
.watchright{
  width: 60%;
  background-color: black;
  height: 50rpx;
  float: left;
  border-top-right-radius:15px ;
  border-bottom-right-radius:15px ;
  display: flex;
  align-items: center;
  opacity: 0.6;
}
.watchleft .leftRound{
  margin-left: 22%;
  width: 13rpx;
  height: 13rpx;
  border-radius: 50%;
  background-color: #fff;
}
.watchleft .rewatch{
  font-size: 18rpx;
  line-height: 50rpx;
  margin-left: 6rpx;
  color: white;
}
.online{
  color: white;
  font-size: 15rpx;
  margin-left: 30%;
}
.list .dianzan{
  width: 12%;
  position: absolute;
  bottom: 30%;
  right: 9%;
  height: 20rpx;
  /* background-color: blueviolet; */
}
.dianzanIcon{
  width: 50%;
  float: left;
  height: 24rpx;
  display: flex;
  align-items: center;
}
.dianzanIcon image{
  width: 100%;
  height: 100%;
}
.dianzannum{
  /* text-align: center;
  color:blueviolet;
  font-size: 12rpx; */
  display: flex;
  /* align-items: center; */
}
.dianzannum text{
  text-align: center;
  color:blueviolet;
  font-size: 20rpx;
  margin-left: 6rpx;
  /* line-height: 20rpx; */
}
/* 商品信息结束 */