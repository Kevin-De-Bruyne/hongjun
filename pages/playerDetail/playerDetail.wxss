.detail{
  margin: 0;
  padding: 0;
  overflow: hidden;
  width: 100%;
  /* height: 100%; */
  min-height: 100vh;
  background-image: linear-gradient(to bottom,black, rgb(115,41,40));
}
.player{
  padding: 0 10% 130rpx 10%;
}
