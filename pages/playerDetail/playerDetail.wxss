  align-items: center;
}
.info_icon{
  width: 275rpx;
  height: 275rpx;
  border-radius: 15rpx;
  /* background-color:red; */
}
.info_icon image{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.info_name{
  margin-top: 20rpx;
