.rule{
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: rgb(123,42,41);
  /* height: 100%; */
  min-height: 100vh;
}
.rulewhole{
  padding: 130rpx 7% 0rpx 7%;
}
.ruleList{
  width: 100%;
  /* height: 260rpx; */
  border: 1px solid white;
  border-radius: 15rpx;
  margin-top: 35rpx;
  position: relative;
}
.ruleList_span{
  font-size: 30rpx;
  position: absolute;
  left: 36%;
  background-color:rgb(123,42,41);
  top: -20rpx;
  width: 30%;
  text-align: center;
  color: white;
  font-weight: 600;
}
.rule_content{
  color: white;
  padding: 30rpx;
  font-size: 20rpx;
}
